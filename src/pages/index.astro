---
import Layout from '../layouts/Layout.astro';

const nivelesEducativos = [
	'Ed. Primaria',
	'ESO',
	'Bachillerato',
	'FP Básica',
	'CF Grado Medio (CF2Y / CD2)',
	'CF Grado Superior (CF3 / CD3)',
	'PFPA'
];

const indicadores = [
	{ valor: '48+', etiqueta: 'Centros implicados' },
	{ valor: '7', etiqueta: 'Islas y contextos de estudio' },
	{ valor: '1.200', etiqueta: 'Estudiantes con discapacidad' },
	{ valor: '2020-2025', etiqueta: 'Horizonte del proyecto' }
];

const secciones = [
	{
		titulo: 'Proyecto',
		resumen:
			'Marco conceptual, metodología mixta y enfoque territorial para comprender la respuesta educativa tras la pandemia.',
		enlace: '/proyecto',
		color: 'from-sky-200 to-blue-100'
	},
	{
		titulo: 'Objetivos',
		resumen:
			'Preguntas guía y resultados esperados que orientan el diagnóstico, la medición de calidad de vida y la innovación inclusiva.',
		enlace: '/objetivos',
		color: 'from-cyan-100 to-sky-50'
	},
	{
		titulo: 'Investigadores',
		resumen:
			'Equipo interdisciplinar de universidades, administración y centros colaboradores que lideran la investigación.',
		enlace: '/investigadores',
		color: 'from-blue-100 to-indigo-50'
	},
	{
		titulo: 'Transferencia',
		resumen:
			'Plan de difusión y acompañamiento para que los hallazgos se conviertan en recursos útiles para la comunidad educativa.',
		enlace: '/transferencia',
		color: 'from-indigo-100 to-cyan-50'
	}
];

const pageTitle =
	'Inclusión educativa y calidad de vida del alumnado con discapacidad en Canarias';
const pageDescription =
	'Landing del proyecto de investigación sobre el efecto del COVID-19 en la respuesta educativa al alumnado con discapacidad en Primaria, ESO, Bachillerato, Formación Profesional y PFPA de Canarias.';
---

<Layout title={pageTitle} description={pageDescription}>
	<div class="relative isolate">
		<div
			class="pointer-events-none absolute inset-0 -z-10 opacity-90 blur-3xl"
			aria-hidden="true"
			style="background: radial-gradient(circle at 10% 30%, rgba(173,216,255,0.5), transparent 50%), radial-gradient(circle at 80% 20%, rgba(210,235,255,0.8), transparent 45%), radial-gradient(circle at 50% 90%, rgba(191,219,254,0.45), transparent 40%);"
		></div>

		<header class="flex min-h-screen flex-col px-4 pt-6 pb-10 sm:px-6 sm:pt-8 sm:pb-16">
			<div class="mx-auto flex w-full max-w-6xl flex-1 flex-col gap-6 sm:gap-8">
				<nav
					class="flex flex-col gap-4 rounded-full border border-sky-100 bg-white/95 px-4 py-4 shadow-sm shadow-sky-100/60 sm:flex-row sm:items-center sm:justify-between sm:px-6 lg:py-5"
				>
					<a class="flex items-center justify-center no-underline" href="/">
						<img
							src="/favicon.png"
							alt="Logo IECVAD"
							class="w-auto opacity-90 transition hover:opacity-100"
							style="height: 2.5rem;"
						/>
					</a>
					<div class="flex flex-wrap items-center justify-center gap-4 text-sm font-medium text-stone-700 sm:justify-end">
						<a class="no-underline transition hover:text-sky-700" href="/proyecto">Proyecto</a>
						<a class="no-underline transition hover:text-sky-700" href="/objetivos">Objetivos</a>
						<a class="no-underline transition hover:text-sky-700" href="/investigadores">Investigadores</a>
						<a class="no-underline transition hover:text-sky-700" href="/transferencia">Transferencia</a>
					</div>
				</nav>

				<div class="flex flex-1 items-center">
					<section class="w-full rounded-[32px] border border-sky-100 bg-white/90 p-5 shadow-2xl shadow-sky-100/60 sm:p-8 lg:rounded-[40px] lg:p-12">
						<div class="grid gap-10 lg:grid-cols-[3fr,2fr] lg:items-center">
							<div class="space-y-6 sm:space-y-8">
								<p class="text-[0.65rem] font-semibold uppercase tracking-[0.35em] text-sky-700 sm:text-xs">
									Proyecto de investigación
								</p>
								<h1 class="text-3xl font-semibold leading-tight text-stone-900 sm:text-4xl lg:text-5xl">
									Inclusión educativa y calidad de vida del alumnado con discapacidad:
									<span class="text-sky-700">el efecto del COVID-19 en Canarias</span>
								</h1>
								<p class="max-w-3xl text-base text-stone-700 sm:text-lg">
									Estudiamos cómo la pandemia transformó la respuesta educativa en todos los niveles —
									Ed. Primaria, ESO, Bachillerato, Formación Profesional y Programas de Formación Profesional
									Adaptada — para garantizar derechos, apoyos personalizados y bienestar integral.
								</p>
								<div class="flex flex-col gap-3 sm:flex-row">
									<a
										href="/proyecto"
										class="no-underline rounded-full bg-sky-600 px-6 py-3 text-center text-sm font-semibold text-white shadow-md shadow-sky-200 transition hover:bg-sky-500"
										>Explorar el proyecto</a
									>
									<a
										href="/transferencia"
										class="no-underline rounded-full border border-sky-200 px-6 py-3 text-center text-sm font-semibold text-sky-800 transition hover:border-sky-400 hover:text-sky-600"
										>Plan de transferencia</a
									>
								</div>
								<div class="flex flex-wrap gap-2">
									{nivelesEducativos.map((nivel) => (
										<span class="rounded-full border border-sky-200 bg-white/70 px-4 py-1 text-xs font-medium text-stone-700">
											{nivel}
										</span>
									))}
								</div>
								<div class="space-y-3">
									<p class="text-xs font-semibold uppercase tracking-[0.3em] text-sky-700">
										Financiado por
									</p>
									<div class="flex flex-wrap items-center gap-4">
										<div class="flex w-full items-center justify-center rounded-2xl bg-white px-4 py-3 shadow-sm shadow-sky-100/60 sm:w-auto sm:px-5">
											<img
												src="/logo_fundacion-cajacanarias.png"
												alt="Fundación CajaCanarias"
												class="h-10 w-auto object-contain"
												loading="lazy"
											/>
										</div>
										<div class="flex w-full items-center justify-center rounded-2xl bg-white px-4 py-2 shadow-sm shadow-sky-100/60 sm:w-auto">
											<img
												src="/obrasocial-caixa.png"
												alt="Obra Social La Caixa"
												class="h-8 w-auto object-contain"
												loading="lazy"
											/>
										</div>
									</div>
								</div>
							</div>

							<div class="rounded-3xl border border-sky-100/80 bg-white/95 p-5 shadow-xl shadow-sky-100/50 sm:p-6">
								<h2 class="text-xs font-semibold uppercase tracking-[0.3em] text-sky-700 sm:text-sm">
									Indicadores Clave
								</h2>
								<div class="mt-4 grid gap-4 sm:grid-cols-2">
									{indicadores.map(({ valor, etiqueta }) => (
										<div class="rounded-2xl border border-sky-100 bg-sky-50/70 px-4 py-5 text-center">
											<p class="text-2xl font-semibold text-stone-900 sm:text-3xl">{valor}</p>
											<p class="mt-2 text-xs text-stone-600">{etiqueta}</p>
										</div>
									))}
								</div>
								<p class="mt-6 text-xs text-stone-500">
									Monitoreo continuo 2020-2025 con enfoque interseccional y participación comunitaria.
								</p>
							</div>
						</div>
					</section>
				</div>
			</div>
		</header>

		<main class="px-4 pb-16 sm:px-6 sm:pb-20">
			<div class="mx-auto max-w-6xl space-y-10">
				<section class="rounded-[32px] border border-sky-100 bg-white/85 p-6 shadow-xl shadow-sky-100/60 sm:p-8">
					<div class="grid gap-6 lg:grid-cols-[2fr,3fr] lg:items-center">
						<div class="space-y-4">
							<p class="text-xs font-semibold uppercase tracking-[0.35em] text-sky-700">Resumen</p>
							<h2 class="text-2xl font-semibold text-stone-900 sm:text-3xl">
								Una hoja de ruta para fortalecer la inclusión educativa
							</h2>
							<p class="text-sm text-stone-700 sm:text-base">
								Coordinamos universidades, administración y centros educativos para estudiar cómo se
								garantiza la calidad de vida del alumnado con discapacidad después de la pandemia. Esta
								landing presenta el proyecto y te guía a cada bloque temático.
							</p>
						</div>
						<div class="grid gap-4 sm:grid-cols-2">
							{secciones.map(({ titulo, enlace }) => (
								<a
									href={enlace}
									class="no-underline rounded-2xl border border-sky-100 bg-sky-50/60 px-4 py-4 text-left text-sm font-semibold text-stone-800 transition hover:border-sky-300 hover:bg-sky-100"
								>
									Visitar {titulo}
								</a>
							))}
						</div>
					</div>
				</section>

				<section class="grid gap-6 md:grid-cols-2">
					{secciones.map(({ titulo, resumen, enlace, color }) => (
						<article
							class={`rounded-3xl border border-sky-100 bg-gradient-to-br ${color} p-6 shadow-lg/50 shadow-sky-100`}
						>
							<p class="text-xs font-semibold uppercase tracking-[0.35em] text-stone-700">
								Sección
							</p>
							<h3 class="mt-2 text-2xl font-semibold text-stone-900">{titulo}</h3>
							<p class="mt-3 text-sm text-stone-700">{resumen}</p>
								<a
									class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-sky-700 no-underline transition hover:gap-3"
									href={enlace}
								>
								Entrar en {titulo}
								<span aria-hidden="true">→</span>
							</a>
						</article>
					))}
				</section>
			</div>
		</main>

		<section class="px-4 pb-16 sm:px-6">
			<div class="mx-auto max-w-6xl overflow-hidden rounded-[32px] border border-sky-100 bg-white shadow-xl shadow-sky-100/80">
				<img
					src="/img_con.jpg"
					alt="Encuentro del proyecto IECVAD"
					class="w-full object-cover"
					loading="lazy"
				/>
				<div class="flex flex-col gap-4 px-4 py-6 md:flex-row md:items-center md:justify-between md:px-6 md:py-8">
					<div class="text-left md:max-w-3xl">
						<h2 class="text-xl font-semibold text-stone-900">
							Convocatoria de Ayudas a Proyectos de Investigación 2020
						</h2>
						<p class="mt-2 text-sm text-stone-700">
							A través del Programa de Ayudas a Proyectos de Iniciativas Sociales, la Fundación Bancaria “la Caixa” y la
							Fundación CajaCanarias presentan la Convocatoria Ayudas a Proyectos de Investigación 2020.
						</p>
					</div>
					<a
						class="inline-flex w-full items-center justify-center rounded-full border border-sky-200 bg-sky-500 px-5 py-3 text-base font-semibold text-white no-underline transition hover:border-sky-300 hover:bg-sky-600 md:w-auto"
						href="https://www.cajacanarias.com/agenda/ayudas-proyectos-investigacion-2020/#Resoluci%C3%B3n--"
						target="_blank"
						rel="noopener noreferrer"
					>
						Ver más
					</a>
				</div>
			</div>
		</section>
	</div>
</Layout>
